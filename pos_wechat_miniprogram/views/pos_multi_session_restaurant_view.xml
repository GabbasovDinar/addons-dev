<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_multi_session.view_pos_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='multi_session_id']" position="after">
                <div id="shop_id" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="shop_id"/>
                        <div class="content-group">
                            <div class="mt16 row">
                                <field name="shop_id" class="col-xs-3 col-md-3" attrs="{'readonly':[('current_session_state', '=', 'opened')]}"></field>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="multi_session_restaurant_form" model="ir.ui.view">
        <field name="name">pos.multi_session.form</field>
        <field name="model">pos.multi_session</field>
        <field name="inherit_id" ref="pos_multi_session_restaurant.multi_session_restaurant_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='floor_ids']" position="after">
                    <field name="shop_id"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
