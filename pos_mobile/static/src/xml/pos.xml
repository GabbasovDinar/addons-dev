<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="ProductScreenWidget">
        <t t-jquery="div[class='product-screen screen']">
            $(this).addClass('swiper-wrapper');
        </t>
        <t t-jquery="div[class='leftpane']">
            $(this).addClass('swiper-slide');
        </t>
        <t t-jquery="div[class='rightpane']">
            $(this).addClass('swiper-slide');
        </t>
        <t t-jquery="div[class='subwindow-container-fix pads']" t-operation="append">
            <span class="placeholder-ProductCategoriesWidget1" />
        </t>

    </t>

    <t t-extend="Chrome">
        <t t-jquery="div[class='subwindow-container-fix screens']">
            $(this).addClass('swiper-container');
        </t>
    </t>

    <t t-extend="CategorySimpleButton">
        <t t-jquery="span[class='category-simple-button js-category-switch']" t-operation="replace">
            <span class='control-button js-category-switch' t-att-data-category-id="category.id" >
                <t t-esc="category.name"/>
            </span>
        </t>
    </t>

    <t t-extend="ProductCategoriesWidget">
        <t t-jquery="header[class='rightpane-header']" t-operation="append">
            <div class="category-list-button">
                <i class='fa fa-th-list'></i>
            </div>
            <div class="order-action-buttons">
                <i class='fa fa-plus-square-o'></i>
                <i class='fa fa-minus-square-o'></i>
            </div>
        </t>
    </t>

</templates>
