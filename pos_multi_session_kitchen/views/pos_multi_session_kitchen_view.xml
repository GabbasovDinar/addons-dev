<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_kitchen_category_settings_form_view" model="ir.ui.view">
        <field name="name">pos.kitchen.category.settings.form</field>
        <field name="model">pos.kitchen.category.settings</field>
        <field name="arch" type="xml">
            <form string="Settings">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field string="States" name="state_ids"/>
                        <field string="Buttons" name="button_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_order_line_state_form_view" model="ir.ui.view">
        <field name="name">pos.order.line.state.form</field>
        <field name="model">pos.order.line.state</field>
        <field name="arch" type="xml">
            <form string="State">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="technical_name" />
                        <field name="sequence"/>
                        <field name="show_in_kitchen"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_order_line_button_form_view" model="ir.ui.view">
        <field name="name">pos.order.line.button.form</field>
        <field name="model">pos.order.line.button</field>
        <field name="arch" type="xml">
            <form string="State">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="background_color"/>
                        <field name="name_color"/>
                        <field name="show_for_waiters"/>
                        <field name="show_in_kitchen"/>
                        <field name="next_state_id"/>
                        <field name="condition_code" widget="ace" options="{'mode': 'python'}"/>
                        <field name="action_close"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
