<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_country_state_form" model="ir.ui.view">
        <field name="name">res.country.state.form</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Districts">
                        <field name="district_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                    <page string="City">
                        <field name="city_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- District -->
    <record id="view_state_district_tree" model="ir.ui.view">
        <field name="name">res.state.district.tree</field>
        <field name="model">res.state.district</field>
        <field name="arch" type="xml">
            <tree string="District">
                <field name="name"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <record id="view_district_form" model="ir.ui.view">
        <field name="name">res.state.district.form</field>
        <field name="model">res.state.district</field>
        <field name="arch" type="xml">
            <form string="District">
                <group>
                    <field name="name"/>
                    <field name="state_id" options='{"no_open": True}'/>
                    <field name="city_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="action_state_district" model="ir.actions.act_window">
        <field name="name">District</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.state.district</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_state_district_tree"/>
        <field name="help"></field>
    </record>

</odoo>
