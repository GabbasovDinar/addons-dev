<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="city_total_limit_email_template" model="mail.template">
            <field name="name">Total Limit Mail Template</field>
            <field name="email_from">${object.sudo().env.user.company_id.email or ''}</field>
            <field name="subject">Достигнут лимит по городу ${object.name} </field>
            <field name="email_to">${object.representative_id.email or ''}</field>
            <field name="model_id" ref="website_itselo.model_res_city"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.representative_id.lang}</field>
            <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

                    <p>Здравствуйте ${object.representative_id.name},</p>
                    <p>Достигнут лимит по городу <b>${object.name}</b> на сумму <b>${object.total} рублей.</b></p>
                </div>
                            ]]>
            </field>
        </record>

        <record id="partner_total_limit_email_template" model="mail.template">
            <field name="name">Total Limit Mail Template</field>
            <field name="email_from">${object.sudo().env.user.company_id.email or ''}</field>
            <field name="subject">Достигнут лимит по продажам для ${object.name} </field>
            <field name="email_to">${object.email or ''}</field>
            <field name="model_id" ref="website_itselo.model_res_partner"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

                    <p>Здравствуйте ${object.name},</p>
                    <p>Достигнут лимит по продажам на сумму <b>${object.total} рублей.</b></p>
                </div>
                            ]]>
            </field>
        </record>

    </data>
</odoo>
