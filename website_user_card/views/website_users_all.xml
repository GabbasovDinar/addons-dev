<openerp>
    <data>
        <template name="user list" id="uindex" page="True">
            <t t-call="website.layout">

                    <t t-set="title">All users </t>
                    <div class="oe_structure">
                        <div class="container">
                            <t t-call="website_user_card.all_user_header"/>
                            <div class="services">

                                <t t-foreach="users" t-as="user">
                                    <p>
                                        <a t-attf-href="/page/user/{{ user.login }}/">  <t t-esc="user.login"/> </a>
                                    </p>
                                </t>
                            </div>
                        </div>
                    </div>

            </t>
        </template>

        <template name="user card" id="test_user" page="True">
            <t t-call="website.layout">
                <t t-set="title">  <t t-esc="user.login"/> card </t>
                 <div class="container">
                    <t t-call="website_user_card.user_header"/>

                        <div class="services">
                            <div class="inlinning" style="position: absolute;">
                                <div class="opt_shadow">
                                 <!--<div class="col-xs-offset-3">-->
                                     <span t-field="user.partner_id.image" t-field-options='{"widget": "image","class": "oe_avatar"}' />
                                 <!--</div>-->
                                </div>
                            </div>
                            <div class="inlinning" style="padding-left: 150px">
                              <p>
                                  Login: <t t-esc="user.login"/>
                              </p>
                              <p>
                                  Email: <t t-esc="user.email"/>
                              </p>
                              <p>
                                  Language:  <t t-esc="user.partner_id.lang"/>
                              </p>
                              <p>
                                  Active:  <t t-esc="user.active"/>
                              </p>
                              <p>
                                  Phone number:  <t t-esc="user.partner_id.phone"/>
                              </p>
                         </div>
                    </div>
                </div>
              </t>
        </template>

    </data>
</openerp>