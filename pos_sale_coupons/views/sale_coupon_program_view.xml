<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Coupon Program -->
    <record id="sale_coupon_program_view_form_common" model="ir.ui.view">
        <field name="name">sale.coupon.program.common.form</field>
        <field name="model">sale.coupon.program</field>
        <field name="inherit_id" ref="sale_coupon.sale_coupon_program_view_form"/>
        <field name="arch" type="xml">
            <group name='reward' position="inside">
                <field name="pos_product_id" attrs="{'invisible': [('reward_type', '!=', 'discount')]}"/>
            </group>
        </field>
    </record>

    <!-- Coupon Form View-->
    <record id="sale_coupon_view_form" model="ir.ui.view">
        <field name="name">sale.coupon.form</field>
        <field name="model">sale.coupon</field>
        <field name="inherit_id" ref="sale_coupon.sale_coupon_view_form"/>
        <field name="arch" type="xml">
            <field name='sales_order_id' position="after">
                <field name="pos_order_id" attrs="{'invisible': [('pos_order_id', '=', False)]}"/>
                <field name="sold_via_order_id" attrs="{'invisible': [('sold_via_order_id', '=', False)]}"/>
            </field>
        </field>
    </record>

</odoo>
